#!/usr/bin/env bash

rm -rf build
mkdir -p build

stylus src --compress -o build
cp src/*.js build

pages="${@:-$(ls config | sed s/.json//)}"
for page in $pages; do
    pug -O config/$page.json < src/index.pug > build/$page.html
    inline-source --compress --root build build/$page.html docs/$page.html
done

rm -rf build
