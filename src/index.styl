body
    display flex
    justify-content center

    > .wrapper
        width 400px

        > header
            margin-bottom 25px

        > nav
            margin-bottom 25px

            > ul
                display flex
                align-items center
                flex-wrap wrap

                > li
                    width 100%
                    list-style none

                    > a
                        display block
                        width 100%
                        height 100%
                        padding 15px
                        font-family inherit
                        font-size 20px
                        text-decoration none
                        color black

                        &:hover
                            text-decoration underline

                > li:not(:last-child)
                    border-bottom 1px solid #dcdcdc
