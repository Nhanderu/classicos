doctype html

html

    head

        meta(charset='utf-8')
        meta(name='author' content='Rafael Escobar')
        meta(name='description' content='Compare títulos entre os maiores clássicos do Brasil!')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')

        link(rel="icon", type="image/png", sizes="32x32" href="/static/favicon-32x32.png")
        link(rel="icon", type="image/png", sizes="16x16" href="/static/favicon-16x16.png")
        link(rel="icon", type="image/ico", href="/static/favicon.ico")
        link(rel="apple-touch-icon", sizes="180x180", href="/static/apple-touch-icon.png")
        link(rel="manifest", href="/static/site.webmanifest")

        link(inline, rel='stylesheet', href='common.css')
        link(inline, rel='stylesheet', href='page.css')

        title #{title}

    body

        header
            h1 #{title}

        main
            table#table-h
                thead: tr
                tbody
            table#table-v
                tbody

        footer
            .footer-left
                a(href="..") voltar
            .footer-right
                span='criado por '
                    a(href="https://nhanderu.com") Rafael Escobar

        span#teams(data-team-1=team1, data-team-2=team2)

        script(inline, src="chrome-mobile.js")

        script(src="https://unpkg.com/axios/dist/axios.min.js")
        script(inline, src="data.js")
