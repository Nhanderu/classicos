@media screen

    /*
     * Common.
     */

    *
        box-sizing border-box
        margin 0
        padding 0

    body
        height 100vh
        width 100vw
        font-family 'Roboto', sans-serif

    /*
     * Main.
     */

    header
        display flex
        align-items center
        justify-content center
        height 10%

        > h1
            text-align center

    main
        height 90%

        > ul
            display flex
            align-items center
            justify-content center
            flex-wrap wrap
            height 100%

            > li
                width 100%
                list-style none
                text-align center

                > a
                    font-family inherit
                    color black
                    font-weight bold

    /*
     * Media specific.
     */

    @media (orientation: landscape)
        header > h1
            margin 2rem
            font-size 4rem
