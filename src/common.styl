*
    box-sizing border-box
    margin 0
    padding 0
    font-family Montserrat, sans-serif

header
    display flex
    align-items center
    height 125px

    > h1
        width 100%
        font-size 70px
        text-align center


.webkit-mobile-full-height
    @media (orientation: portrait)
        height calc(100vh - 56px)
        overflow hidden



@media (orientation: portrait)

    footer
        display none

@media (orientation: landscape)

    footer
        position fixed
        bottom 0
        left 0
        display flex
        justify-content space-between
        width 100vw

        > div
            margin 20px

        a
            font-family inherit
            font-weight bold
            text-decoration none
            color black

            &:hover
                text-decoration underline
